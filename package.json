{
  "name": "rad.io",
  "version": "0.0.1",
  "description": "Professional browser-based SDR visualizer with industry-standard signal analysis and universal device support",
  "scripts": {
    "build": "npm run asbuild:release && webpack",
    "build:prod": "npm run asbuild:release && webpack --mode production",
    "start": "npm run asbuild:release && webpack serve",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --write",
    "format:check": "prettier --check",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run format:check && npm run type-check && npm run build",
    "clean": "rm -rf dist node_modules build",
    "asbuild:debug": "asc assembly/index.ts --target debug",
    "asbuild:release": "asc assembly/index.ts --target release",
    "asbuild": "npm run asbuild:debug && npm run asbuild:release"
  },
  "author": "Alex Mitchell <alex@alexmitchelltech.com>",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@assemblyscript/loader": "^0.28.8",
    "@eslint/css": "^0.8.1",
    "@eslint/js": "^9.27.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^6.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@types/w3c-web-usb": "^1.0.10",
    "assemblyscript": "^0.28.8",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.3.3",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "exports": {
    ".": {
      "import": "./build/release.js",
      "types": "./build/release.d.ts"
    }
  }
}
