{
  "name": "rad.io",
  "version": "0.0.0",
  "description": "Professional browser-based SDR visualizer with industry-standard signal analysis and universal device support",
  "scripts": {
    "build": "webpack",
    "build:prod": "webpack --mode production",
    "start": "webpack serve",
    "dev": "webpack serve",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "NODE_OPTIONS='--expose-gc --max-old-space-size=8192' jest --maxWorkers=1",
    "test:unit": "NODE_OPTIONS='--expose-gc --max-old-space-size=8192' jest --maxWorkers=1 --testPathPatterns='(dsp|testMemoryManager|SDRDevice).test'",
    "test:components": "NODE_OPTIONS='--expose-gc --max-old-space-size=8192' jest --maxWorkers=1 --testPathPatterns='components'",
    "test:watch": "NODE_OPTIONS='--expose-gc --max-old-space-size=8192' jest --watch --maxWorkers=1",
    "test:coverage": "NODE_OPTIONS='--expose-gc --max-old-space-size=8192' jest --coverage --maxWorkers=1",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run format:check && npm run type-check && npm run build",
    "self-assess": "node .github/agents/self-assessment.js",
    "clean": "rm -rf dist node_modules"
  },
  "author": "Alex Mitchell <alex@alexmitchelltech.com>",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@eslint/css": "^0.8.1",
    "@eslint/js": "^9.27.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^6.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@types/w3c-web-usb": "^1.0.10",
    "babel-jest": "^30.2.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.3.3",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
