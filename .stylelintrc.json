{
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-declaration-strict-value"],
  "rules": {
    "color-no-hex": null,
    "color-named": null,
    "scale-unlimited/declaration-strict-value": null,
    "value-keyword-case": [
      "lower",
      {
        "ignoreProperties": ["/font/"],
        "ignoreKeywords": [
          "Inter",
          "Roboto",
          "Ubuntu",
          "Cantarell",
          "Arial",
          "Menlo",
          "Monaco",
          "Consolas",
          "SFMono-Regular"
        ]
      }
    ]
  }
}
